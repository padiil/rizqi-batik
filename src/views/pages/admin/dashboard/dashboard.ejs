<!DOCTYPE html>
<html lang="id">
  <%- include('../../../partials/head.ejs') %>
  <body class="bg-gray-100">
    <!-- Sidebar -->
    <div class="flex">
      <%- include('../../../partials/admin/sidebar.ejs') %>

      <!-- Content -->
      <div class="flex-1 p-8">
        <div class="mb-6 flex justify-between items-center">
          <h1 class="text-3xl font-semibold">Dashboard</h1>
          <button
            class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600"
          >
            Tambah Produk
          </button>
        </div>

        <!-- Cards Overview -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
          <div
            class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between"
          >
            <div>
              <h3 class="text-xl font-semibold">Total Produk</h3>
              <p class="text-2xl font-bold">120</p>
            </div>
            <i class="fas fa-boxes text-4xl text-gray-700"></i>
          </div>
          <div
            class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between"
          >
            <div>
              <h3 class="text-xl font-semibold">Total Kategori</h3>
              <p class="text-2xl font-bold">15</p>
            </div>
            <i class="fas fa-th-large text-4xl text-gray-700"></i>
          </div>
          <div
            class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between"
          >
            <div>
              <h3 class="text-xl font-semibold">Total Pesanan</h3>
              <p class="text-2xl font-bold">350</p>
            </div>
            <i class="fas fa-shopping-cart text-4xl text-gray-700"></i>
          </div>
          <div
            class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between"
          >
            <div>
              <h3 class="text-xl font-semibold">Pendapatan</h3>
              <p class="text-2xl font-bold">Rp 5,000,000</p>
            </div>
            <i class="fas fa-dollar-sign text-4xl text-gray-700"></i>
          </div>
        </div>

        <!-- Produk Terbaru -->
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold mb-4">Produk Terbaru</h2>
          <table class="min-w-full table-auto">
            <thead>
              <tr>
                <th class="py-2 px-4 border-b text-left">Nama Produk</th>
                <th class="py-2 px-4 border-b text-left">Harga</th>
                <th class="py-2 px-4 border-b text-left">Kategori</th>
                <th class="py-2 px-4 border-b text-left">Aksi</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="py-2 px-4 border-b">Produk A</td>
                <td class="py-2 px-4 border-b">Rp 150.000</td>
                <td class="py-2 px-4 border-b">Elektronik</td>
                <td class="py-2 px-4 border-b">
                  <button class="text-yellow-500 hover:text-yellow-600">
                    Edit
                  </button>
                  <button class="text-red-500 hover:text-red-600 ml-4">
                    Hapus
                  </button>
                </td>
              </tr>
              <tr>
                <td class="py-2 px-4 border-b">Produk B</td>
                <td class="py-2 px-4 border-b">Rp 200.000</td>
                <td class="py-2 px-4 border-b">Pakaian</td>
                <td class="py-2 px-4 border-b">
                  <button class="text-yellow-500 hover:text-yellow-600">
                    Edit
                  </button>
                  <button class="text-red-500 hover:text-red-600 ml-4">
                    Hapus
                  </button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Font Awesome for Icons -->
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
